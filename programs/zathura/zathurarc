map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

# Allows selected text to be copied to the system clipboard
set selection-clipboard clipboard

# Make the default view include the status bar (s) & the vertical scrollbar (v)
# Other options: command line (c) & horizontal scrollbar (h)
set guioptions "sv"

set font "FiraCode Nerd Font Mono 12"
